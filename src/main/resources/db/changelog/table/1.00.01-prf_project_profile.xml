<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <property dbms="postgresql,mssql,oracle" value="false" name="autoIncrement"/>
    <property dbms="h2" value="true" name="autoIncrement"/>

    <changeSet id="1.00.01-prf_project-profile-0001" author="leo" failOnError="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="prf_project-profile"/>
            </not>
        </preConditions>
        <createTable tableName="prf_project-profile">
            <column name="project_id" type="bigint" remarks="project id">
                <constraints foreignKeyName="fk_project_id" referencedTableName="prf_project"
                             referencedTableSchemaName="prf" referencedColumnNames="id"
                             nullable="false"/>
            </column>
            <column name="profile_id" type="bigint" remarks="profile id">
                <constraints foreignKeyName="fk_profile_id" referencedTableName="prf_profile"
                             referencedTableSchemaName="prf" referencedColumnNames="id"
                             nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.00.01-prf_project-profile-0002" author="leo" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="prf_project-profile"/>
                <not>
                    <indexExists indexName="prf_project-profile_index_0"/>
                </not>
            </and>
        </preConditions>
        <createIndex indexName="prf_project-profile_index_0" tableName="prf_project-profile" unique="true">
            <column name="profile_id"/>
            <column name="project_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>