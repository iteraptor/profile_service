<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <property dbms="postgresql,mssql,oracle" value="false" name="autoIncrement"/>
    <property dbms="h2" value="true" name="autoIncrement"/>

    <changeSet id="1.00.01-prf_cities-0001" author="Bofh82" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="city_id_seq" schemaName="prf"/>
            </not>
        </preConditions>
        <createSequence sequenceName="city_id_seq" schemaName="prf" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="1.00.01-prf_cities-0002" author="Bofh82" failOnError="true" >
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="prf_cities" schemaName="prf"/>
            </not>
        </preConditions>
        <createTable tableName="prf_cities" schemaName="prf">
            <column name="id" type="bigint" defaultValueSequenceNext="city_id_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="country_id" type="bigint">
                <constraints foreignKeyName="fk_city_country_id" referencedTableName="prf_countries" referencedTableSchemaName="prf" referencedColumnNames="id"
                             nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Bofh82" id="1.00.01-prf_cities-0003">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="prf_cities" schemaName="prf"/>
                <not>
                    <indexExists indexName="prf_cities_index_0" schemaName="prf"/>
                </not>
            </and>
        </preConditions>
        <createIndex indexName="prf_cities_index_0" tableName="prf_cities" schemaName="prf" clustered="true">
            <column name="id"/>
            <column name="country_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>